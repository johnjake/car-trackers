<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Change the dimension if you want to change the size of the dots effect splash -->
    <com.cartrackers.app.utils.ripple_effect.DotsView
        android:id="@+id/vDotsView"
        android:layout_width="@dimen/pixels_15"
        android:layout_height="@dimen/pixels_15"
        android:layout_gravity="center" />

    <!-- Change the dimension if you want to change the size of the effect diameter -->
    <com.cartrackers.app.utils.ripple_effect.CircleView
        android:id="@+id/vCircle"
        android:layout_width="@dimen/pixels_15"
        android:layout_height="@dimen/pixels_15"
        android:layout_gravity="center" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/pixels_15"
        android:layout_height="@dimen/pixels_15"
        android:layout_gravity="center" />

</merge>