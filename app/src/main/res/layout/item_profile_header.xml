<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/appbarBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/toolbarBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/toolbarBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="40dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="@+id/followingDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarBackground"
        app:srcCompat="@drawable/leanne_graham"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:maxLines="3"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        tools:text="Mark Richards" />

    <TextView
        android:id="@+id/followingCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:fontFamily="@font/inter_bold"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_smallest"
        app:layout_constraintEnd_toStartOf="@+id/followingDivider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/fullname"
        tools:text="bert" />

    <TextView
        android:id="@+id/followingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:fontFamily="@font/inter_regular"
        android:text="Username"
        android:textColor="@color/lighter_grey"
        android:textSize="@dimen/text_size_tiny"
        app:layout_constraintEnd_toStartOf="@+id/followingDivider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/followingCount"
        tools:text="Username" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/followingDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32" />

    <TextView
        android:id="@+id/vipCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_smallest"
        app:layout_constraintEnd_toStartOf="@+id/vipListDivider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/followingDivider"
        app:layout_constraintTop_toTopOf="@+id/followingCount"
        tools:text="google.com" />

    <TextView
        android:id="@+id/vipTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:fontFamily="@font/inter_regular"
        android:text="@string/vip_list"
        android:textColor="@color/lighter_grey"
        android:textSize="@dimen/text_size_tiny"
        app:layout_constraintBottom_toBottomOf="@+id/followingTitle"
        app:layout_constraintEnd_toStartOf="@+id/vipListDivider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/followingDivider"
        app:layout_constraintTop_toTopOf="@+id/followingTitle"
        tools:text="Website" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vipListDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <TextView
        android:id="@+id/questionCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/zero"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_smallest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vipListDivider"
        app:layout_constraintTop_toTopOf="@+id/followingCount"
        tools:text="Keebler LLC" />

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:text="@string/vello_ready"
        android:textColor="@color/lighter_grey"
        android:textSize="@dimen/text_size_tiny"
        app:layout_constraintBottom_toBottomOf="@+id/vipTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vipListDivider"
        app:layout_constraintTop_toTopOf="@+id/vipTitle"
        tools:text="Company" />




    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:fontFamily="@font/inter_bold"
        android:text="@string/friends_list"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/followingTitle"
        app:layout_constraintTop_toBottomOf="@+id/followingTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>